<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">
    <Button
            android:text="GO!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="start" android:textSize="60sp"
            android:padding="40dp" android:background="@android:color/holo_blue_bright" android:visibility="invisible"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/gameLayout">

        <TextView
                android:text="30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/timerText"
                android:textSize="40sp" android:textIsSelectable="false"
                android:padding="10dp" android:background="#FFC107"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <TextView
                android:text="0/0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreText"
                android:textSize="40sp" android:textIsSelectable="false"
                android:padding="10dp" android:background="#8BC34A"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="31 + 7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sumText"
                android:textSize="30sp" android:padding="15dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="Play Again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/restart"
                android:onClick="restart" android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="166dp"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resultText"
                android:textSize="50sp"
                android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="386dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.gridlayout.widget.GridLayout
                android:layout_width="412dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/timerText"
                android:id="@+id/gridLayout">

            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button0"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="0"
                    android:textSize="80sp"
                    android:background="@color/colorPrimary"
                    android:onClick="choseAnswer"/>
            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="1"
                    android:textSize="80sp"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="choseAnswer"/>
            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="2"
                    android:textSize="80sp"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="choseAnswer"/>
            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="3"
                    android:textSize="80sp"
                    android:background="@android:color/holo_purple"
                    android:onClick="choseAnswer"/>
        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>