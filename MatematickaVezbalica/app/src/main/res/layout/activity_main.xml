<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/main_header_selector"
        android:id="@+id/meni">


    <Button
            android:text="ODUZIMANJE"
            android:id="@+id/oduzimanje"
            android:onClick="oduzimanje"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sabiranje"
            app:layout_constraintStart_toStartOf="@id/sabiranje"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".14"
            app:layout_constraintWidth_percent=".900"
            android:textSize="30sp"
            android:padding="10dp"
            android:typeface="monospace"
            android:gravity="center"
            android:background="@drawable/main_header_selector2"
            android:visibility="invisible"
            android:textColor="#003333"
            tools:visibility="invisible"/>

    <Button
            android:text="SABIRANJE"
            android:id="@+id/sabiranje"
            android:onClick="sabiranje"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/naslovMatematika"
            android:layout_marginTop="40dp"
            app:layout_constraintHeight_percent=".14"
            app:layout_constraintWidth_percent=".900"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="30sp"
            android:padding="10dp"
            android:typeface="monospace"
            android:gravity="center"
            android:background="@drawable/main_header_selector2"
            android:visibility="invisible"
            tools:visibility="invisible"
            android:textColor="#003333"
            />

    <TextView
            android:text="Matematicka Vezbalica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".900"
            android:id="@+id/naslovMatematika"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"
            android:padding="10dp"
            android:textColor="#003333"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:gravity="center"
            tools:visibility="invisible"
            android:layout_marginTop="40dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/prozorZaIgru"
            tools:visibility="visible">

        <TextView
                android:text="30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tajmer"
                android:textSize="40sp"
                android:padding="10dp"
                android:background="#ff80ff"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:typeface="monospace"
                android:gravity="center"
                android:textStyle="bold"/>

        <TextView
                android:text="0/0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tekstRezultat"
                android:textSize="40sp"
                android:padding="10dp"
                android:background="#80e5ff"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:typeface="monospace"
                android:gravity="center"
                android:textStyle="bold"/>


        <Button
                android:text="Igraj Ponovo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".10"
                app:layout_constraintWidth_percent=".38"
                android:id="@+id/restart"
                android:onClick="restart"
                android:visibility="invisible"
                android:background="#80e5ff"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="35dp"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#330000"
                android:typeface="monospace"
                android:fontFamily="sans-serif"
                tools:visibility="visible"/>

        <Button
                android:text="Nazad"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".10"
                app:layout_constraintWidth_percent=".38"
                android:id="@+id/vratiSeNazad"
                android:onClick="izaberiMeni"
                android:visibility="invisible"
                android:background="#ff80ff"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="35dp"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#330000"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                tools:visibility="visible"/>

        <TextView
                android:text="TACNO!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tekstLabelaTN"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/gridLayout"
                android:layout_marginTop="0dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:typeface="monospace"
                tools:visibility="visible"
                android:gravity="center"
                android:textColor="#330000"
                android:padding="10dp"/>

        <androidx.gridlayout.widget.GridLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/gridLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button0"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="0"
                    android:textSize="65sp"
                    android:background="#ffccff"
                    android:onClick="izaberiOdgovor"
                    tools:layout_conversion_absoluteHeight="108dp"
                    tools:layout_editor_absoluteY="178dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_conversion_absoluteWidth="206dp"/>

            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="1"
                    android:textSize="65sp"
                    android:background="#ccf5ff"
                    android:onClick="izaberiOdgovor"
                    tools:layout_conversion_absoluteHeight="108dp"
                    tools:layout_editor_absoluteY="178dp"
                    tools:layout_editor_absoluteX="206dp"
                    tools:layout_conversion_absoluteWidth="206dp"/>

            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="2"
                    android:textSize="65sp"
                    android:background="#ccf5ff"
                    android:onClick="izaberiOdgovor"
                    tools:layout_conversion_absoluteHeight="108dp"
                    tools:layout_editor_absoluteY="286dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_conversion_absoluteWidth="206dp"/>

            <Button
                    android:text="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill"
                    android:tag="3"
                    android:textSize="65sp"
                    android:background="#ffccff"
                    android:onClick="izaberiOdgovor"
                    tools:layout_conversion_absoluteHeight="108dp"
                    tools:layout_editor_absoluteY="286dp"
                    tools:layout_editor_absoluteX="206dp"
                    tools:layout_conversion_absoluteWidth="206dp"/>
        </androidx.gridlayout.widget.GridLayout>

        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tekstA"
                android:textSize="35sp"
                android:padding="10dp"
                android:textColor="#330000"
                android:textStyle="bold"
                android:typeface="monospace"
                android:fontFamily="sans-serif-black"
                tools:visibility="visible"
                android:text="10"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout"
                app:layout_constraintRight_toRightOf="@+id/tekstPlus"
                android:layout_marginRight="30dp"/>

        <TextView
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tekstPlus"
                android:textSize="35sp"
                android:padding="10dp"
                android:textColor="#330000"
                android:textStyle="bold"
                android:typeface="monospace"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout"
                android:layout_marginBottom="0dp"/>

        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tekstB"
                android:textSize="35sp"
                android:padding="10dp"
                android:textColor="#330000"
                android:textStyle="bold"
                android:typeface="monospace"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                tools:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout"
                app:layout_constraintLeft_toLeftOf="@+id/tekstPlus"
                android:layout_marginLeft="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>